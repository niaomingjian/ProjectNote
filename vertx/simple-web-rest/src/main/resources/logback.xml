<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %level [%thread] %logger - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="io.netty" level="warn"/>

  <root level="info">
    <appender-ref ref="STDOUT"/>
  </root>

</configuration>
